                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/is_potentially_hazardous_asteroid"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/is_sentry_object"
                style="@style/TextView_AsteroidInfo" />
