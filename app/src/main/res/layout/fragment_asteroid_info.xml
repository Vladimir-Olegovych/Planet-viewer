                android:id="@+id/close_approach_date_full"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/epoch_date_close_approach"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/astronomical"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/kilometers"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/lunar"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/miles"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/orbiting_body"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/kilometers_per_hour"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/kilometers_per_second"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/miles_per_hour"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/designation"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/estimated_diameter_max"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/estimated_diameter_min"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/estimated_diameter_max_0"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/estimated_diameter_min_0"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/estimated_diameter_max_1"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/estimated_diameter_min_1"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/estimated_diameter_max_2"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
                android:id="@+id/estimated_diameter_min_2"
                android:textColor="@color/blue"
                style="@style/TextView_AsteroidInfo" />
            <TextView
